<div class="container">
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "Octocat", root_path, class: "brand" %>
        <ul class="nav pull-right">
          <li><a href="/users/sign_up">注册</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span6 offset3">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
    
    <% if flash[:alert] %>
    <div class="alert alert-error">
      <a class="close" data-dismiss="alert">×</a>
      <p><%= flash[:alert] %></p>
    </div>
    <% end %>

    <fieldset>
      <legend>用户登录</legend>
      <%= f.input :email,:autofocus => true %>
      <%= f.input :password %>

      <div class="form-actions" style="margin-bottom:0">
        <%= f.submit '登录', :class => 'btn btn-primary' %>
        <%= link_to '取消', root_path, :class => 'btn' %>
        <%= link_to "忘记密码？", new_password_path(resource_name), class: "btn btn-warning", style: "float:right" %>
      </div>
    </fieldset>
    <% end %>
    </div>
  </div>

  <hr>

  <footer>
    <p>Changhong & Hu Zhengping 2012 &copy; All Rights Reserved.</p>
  </footer>

</div>
