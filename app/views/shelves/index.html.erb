<ul class="breadcrumb">
  <li>
    <%= link_to raw("<i class='icon-home'></i> 首页"), root_path%> <span class="divider">/</span>
  </li>
  <li>
    <%= link_to "区域", areas_path%> <span class="divider">/</span>
  </li>
  <li class="active">货架列表</li>
</ul>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>货架名称</th>
      <th>层个数</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= link_to c.layers.size, area_shelf_layers_path(params[:area_id],c.id) %></td>
        <td>
          <%= link_to '编辑', edit_area_shelf_path(params[:area_id],c), :class => 'btn btn-mini' %>
          <%= link_to '摧毁', area_shelf_path(params[:area_id],c), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新建', new_area_shelf_path, :class => 'btn' %>
