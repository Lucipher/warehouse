<%= simple_form_for [:area,resource], :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <legend><%= "#{btn}货架" %></legend>
  <%= f.input :name, label: "货架名称" %>

  <div class="form-actions">
    <%= f.submit "提交", :class => 'btn btn-primary' %>
    <%= link_to '取消', area_shelves_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>
