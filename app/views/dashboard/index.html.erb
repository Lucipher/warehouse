<ul class="breadcrumb">
  <li>
    <%= link_to raw("<i class='icon-home'></i> 首页"), nil, class: "active" %> <span class="divider">/</span>
  </li>
  <li>
    <%= "仓库状态" %>
  </li>
</ul>

<div class="row">
