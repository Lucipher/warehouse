<%= simple_form_for @in_order, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <legend><%= btn %>入库单</legend>
  
  <%= f.association :product, label: "选择商品" %>
  <%= f.input :number, as: :string, label: "商品数量" %>
  
  <div class="form-actions">
    <%= f.submit '生成入库单', :class => 'btn btn-primary' %>
    <%= link_to '取消', in_orders_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>
