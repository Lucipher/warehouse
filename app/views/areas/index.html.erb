<ul class="breadcrumb">
  <li>
    <%= link_to raw("<i class='icon-home'></i> 首页"), root_path%> <span class="divider">/</span>
  </li>
  <li class="active">区域列表</li>
</ul>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>区域名称</th>
      <th>货架个数</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= link_to c.shelves.size, area_shelves_path(c.id) %></td>
        <td>
          <%= link_to '编辑', edit_resource_path(c), :class => 'btn btn-mini' %>
          <%= link_to '摧毁', resource_path(c), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新建', new_resource_path, :class => 'btn' %>
