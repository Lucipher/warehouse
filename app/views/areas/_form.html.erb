<%= simple_form_for resource, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <legend><%= "#{btn}区域" %></legend>
  <%= f.input :name, label: "区域名称" %>

  <div class="form-actions">
    <%= f.submit "提交", :class => 'btn btn-primary' %>
    <%= link_to '取消', collection_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>
